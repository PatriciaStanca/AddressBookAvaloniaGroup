<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AddressBookAvalonia.MainWindow"
        Width="900" Height="600"
        Title="My Address Book"
        FontFamily="Segoe UI">

  <DockPanel Margin="20" LastChildFill="True">

    <!-- Header -->
    <TextBlock DockPanel.Dock="Top"
               Text="ðŸ“’ My Address Book"
               FontSize="28"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,0,0,15"/>

    <!-- Search box -->
    <TextBox x:Name="SearchBox"
             DockPanel.Dock="Top"
             Watermark="Search contactsâ€¦"
             KeyUp="OnSearchKeyUp"
             Margin="0,0,0,15"/>

    <!-- Left panel: input form -->
    <StackPanel DockPanel.Dock="Left"
                Width="250"
                Spacing="8"
                Margin="0,0,15,0">
      <TextBlock Text="Name"/>
      <TextBox x:Name="NameBox"/>

      <TextBlock Text="Street"/>
      <TextBox x:Name="StreetBox"/>

      <TextBlock Text="ZIP Code"/>
      <TextBox x:Name="ZipBox"/>

      <TextBlock Text="City"/>
      <TextBox x:Name="CityBox"/>

      <TextBlock Text="Phone"/>
      <TextBox x:Name="PhoneBox"/>

      <TextBlock Text="Email"/>
      <TextBox x:Name="EmailBox"/>

      <!-- Buttons -->
      <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,10,0,0">
        <Button x:Name="AddButton"
                Content="Add"
                Background="#2E86C1"
                Foreground="White"
                Click="OnAddClick"/>
        <Button x:Name="UpdateButton"
                Content="Update"
                Background="#F39C12"
                Foreground="White"
                Click="OnUpdateClick"/>
        <Button x:Name="DeleteButton"
                Content="Delete"
                Background="#C0392B"
                Foreground="White"
                Click="OnDeleteClick"/>
      </StackPanel>
    </StackPanel>

    <!-- Right panel: contacts list -->
    <ListBox x:Name="ContactsList"
             SelectionChanged="OnContactSelected"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"/>
  </DockPanel>
</Window>
