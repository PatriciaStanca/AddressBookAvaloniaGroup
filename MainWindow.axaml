<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:AddressBookAvalonia.Models"
        x:Class="AddressBookAvalonia.MainWindow"
        Width="900" Height="600"
        Title="My Address Book"
        FontFamily="Segoe UI">

  <DockPanel Margin="20" LastChildFill="True">

    <!-- Header -->
    <TextBlock DockPanel.Dock="Top"
               Text="ðŸ“’ My Address Book"
               FontSize="28"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,0,0,15"/>

    <!-- Search box -->
    <TextBox x:Name="SearchBox"
             DockPanel.Dock="Top"
             Watermark="Search contactsâ€¦"
             KeyUp="OnSearchKeyUp"
             Margin="0,0,0,15"/>

    <!-- Left panel: input form -->
    <StackPanel DockPanel.Dock="Left"
                Width="350"
                Spacing="8"
                Margin="0,0,15,0">
      <TextBlock Text="Name"/>
      <TextBox x:Name="NameBox"/>

      <TextBlock Text="Street"/>
      <TextBox x:Name="StreetBox"/>

      <TextBlock Text="ZIP Code"/>
      <TextBox x:Name="ZipBox"/>

      <TextBlock Text="City"/>
      <TextBox x:Name="CityBox"/>

      <TextBlock Text="Phone"/>
      <TextBox x:Name="PhoneBox"/>

      <TextBlock Text="Email"/>
      <TextBox x:Name="EmailBox"/>

      <!-- Buttons -->
      <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,10,0,0">
        <Button x:Name="AddButton"
                Content="Add"
                Background="#2E86C1"
                Foreground="White"
                Click="OnAddClick"/>
        <Button x:Name="UpdateButton"
                Content="Update"
                Background="#F39C12"
                Foreground="White"
                Click="OnUpdateClick"/>
        <Button x:Name="DeleteButton"
                Content="Delete"
                Background="#C0392B"
                Foreground="White"
                Click="OnDeleteClick"/>
        <Button x:Name="ClearButton"
                Content="Clear"
                Background="#7F8C8D"
                Foreground="White"
                Click="OnClearClick"/>
		  <Button x:Name="DeleteAllButton"
                Content="DeleteAll"
                Background="#7B241C"
                Foreground="White"
                Click="OnDeleteAllClick"/>
      </StackPanel>
    </StackPanel>

    <!-- Right panel: contacts list -->

    <ListBox x:Name="ContactsList"
             SelectionChanged="OnContactSelected"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <ListBox.ItemTemplate>
        <!-- Important: x:DataType tells the compiler that items is contact -->
        <DataTemplate x:DataType="models:Contact">
          <Border Margin="0,0,0,8" Padding="8">
            <Grid ColumnDefinitions="*" RowDefinitions="Auto,Auto,Auto">
              <TextBlock Grid.Row="0"
                         Text="{Binding Name}"
                         FontSize="16"
                         FontWeight="Bold"/>

              <TextBlock Grid.Row="1"
                         Margin="0,4,0,0">
                <Run Text="{Binding Street}"/>
                <Run Text=", "/>
                <Run Text="{Binding ZipCode}"/>
                <Run Text=" "/>
                <Run Text="{Binding City}"/>
              </TextBlock>

              <TextBlock Grid.Row="2" Margin="0,4,0,0">
                <Run Text="{Binding Phone}"/>
                <Run Text=" Â· "/>
                <Run Text="{Binding Email}"/>
              </TextBlock>
            </Grid>
          </Border>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </DockPanel>
</Window>
